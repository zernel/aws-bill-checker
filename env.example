# Notification Webhooks (configure at least one)
# Feishu Webhook URL
FEISHU_WEBHOOK_URL=

# Mattermost Webhook URL
MATTERMOST_WEBHOOK_URL=

# Anomaly Detection Thresholds
# Absolute dollar threshold (default: 50.0)
THRESHOLD_DOLLAR=50.0

# Percentage threshold (default: 25.0)
THRESHOLD_PERCENT=25.0

# Minimum cost for percentage threshold to apply (default: 10.0)
# This prevents small changes like $0.1 -> $0.2 from being flagged as anomalies
THRESHOLD_PERCENT_MIN_COST=10.0

# Currency Settings
# Currency symbol to display (default: $)
# Examples: $, ￥, €, £
CURRENCY_SYMBOL=$

# Language Settings
# Notification language (default: CN)
# Options: CN (Chinese), EN (English)
LANGUAGE=CN

